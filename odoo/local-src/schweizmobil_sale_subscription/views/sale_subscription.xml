<odoo>

  <record id="sale_subscription.sale_subscription_action" model="ir.actions.act_window">
    <field name="view_mode">tree,kanban,form,pivot,graph,cohort,activity</field>
  </record>

  <record id="sale_subscription_view_form" model="ir.ui.view">
    <field name="name">sale.subscription.form.inherit</field>
    <field name="model">sale.subscription</field>
    <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@id='other_info']/group" position="inside">
        <field name="first_invoice_to_be_paid_before"/>
      </xpath>
      <field name="date_start" position="before">
          <field name="duration_display"/>
          <field name="duration"/>
      </field>
    </field>
  </record>

  <record id="sale_subscription_view_list" model="ir.ui.view">
    <field name="name">sale.subscription.tree.inherit</field>
    <field name="model">sale.subscription</field>
    <field name="inherit_id" ref="sale_subscription.sale_subscription_view_list"/>
    <field name="arch" type="xml">
      <field name="recurring_next_date" position="after">
        <field name="first_invoice_to_be_paid_before"/>
      </field>
      <field name="next_invoicing_date" position="before">
        <field name="duration_display"/>
        <field name="date_start"/>
        <field name="date"/>
      </field>
    </field>
  </record>

  <record id="sale_subscription_view_search" model="ir.ui.view">
    <field name="name">sale.subscription.search.inherit</field>
    <field name="model">sale.subscription</field>
    <field name="inherit_id" ref="sale_subscription.sale_subscription_view_search"/>
    <field name="arch" type="xml">
      <xpath expr="//filter[@name='bad']" position="after">
        <filter name="unpaid_invoice_overdue" string="Unpaid first invoice overdue"
          domain="[('has_first_invoice_overdue', '=', True)]"/>
        <filter name="customer_with_newsletter" string="Customer with newsletter" domain="[('partner_id.newsletter', '=', True)]"/>
      </xpath>
      <xpath expr="//field[@name='name']" position="after">
          <field name="customer_number"/>
      </xpath>
      <xpath expr="//filter[@name='end_month']" position="after">
          <filter string="Total Duration" name="duration_display" domain="[]" context="{'group_by': 'duration_display'}"/>
      </xpath>
    </field>
  </record>

</odoo>
