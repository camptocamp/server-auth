<?xml version="1.0"?>
<odoo noupdate="1">

    <record id="subscription_plan_2_month" model="sale.subscription.plan">
        <field name="name">2 Months</field>
        <field name="billing_period_value">2</field>
        <field name="billing_period_unit">month</field>
        <field name="user_closable">True</field>
        <field name="user_quantity">True</field>
        <field name="user_extend">True</field>
    </record>

    <record id="sale_subscription_template_schweizmobil_plus" model="sale.order.template">
        <field name="name">Schweizmobil PLUS</field>
        <field name="plan_id" ref="sale_subscription.subscription_plan_year"/>
        <field name="is_unlimited" eval="True"/>
        <field name="closing_delay" eval="59"/>
        <field name="number_of_days" eval="0" />
        <field name="closing_delay_type">daily</field>
        <field name="next_invoicing_date_advance_type_id" ref="subscription_plan_2_month" />
    </record>
</odoo>
