<odoo>

  <record id="view_move_form" model="ir.ui.view">
    <field name="name">account.move.form.inherit</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='sale_info_group']" position="inside">
        <field name="invoicing_method"/>
        <field name="paid_online"/>
        <field name="report_to_send"/>
        <field name="sftp_pdf_path" groups="base.group_no_one"/>
      </xpath>
    </field>
  </record>

  <record id="invoice_search_view" model="ir.ui.view">
    <field name="name">invoice_search_view</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_account_invoice_filter"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='name']" position="after">
        <field name="customer_number"/>
      </xpath>
    </field>
  </record>

</odoo>
